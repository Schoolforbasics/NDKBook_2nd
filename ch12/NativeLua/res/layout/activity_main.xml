<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/runBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Run" />
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/runBtn"
        android:text="LuaScript" />
    
   <EditText
        android:id="@+id/scriptEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:minLines="10" 
        android:inputType="textMultiLine"
         android:gravity="top|left">

        <requestFocus />
    </EditText>
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/scriptEditText"
        android:text="Output" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
         >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/valueEditText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="value1"/>

            <TextView
                android:id="@+id/valueTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/valueEditText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="value2"/>

            <TextView
                android:id="@+id/valueTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/valueEditText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="value3"/>

            <TextView
                android:id="@+id/valueTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </TableRow>
    </TableLayout>
</RelativeLayout>
